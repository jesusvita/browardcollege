            var formatImage = new Array();
            formatImage = b.split(',');
            var imageType = renderCtx.CurrentItem.File_x0020_Type;
            imageType = imageType.toLowerCase();
            for (i = 0; i < formatImage.length; i++) {
                if (imageType.lastIndexOf(formatImage[i]) == -1)
                    IsValid = false;
                else {
                    IsValid = true;
                    break;
                }
            }
            return IsValid;

